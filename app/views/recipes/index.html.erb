<% @recipes.each do |recipe| %>
  <div class='col-6'>
    <h1><%= link_to recipe.title, recipe %></h1>
    <%= image_tag recipe.image if recipe.image.attached? %>
    <ul>
      <li><%= recipe.recipe_type.name %></li>
      <li><%= recipe.cuisine.name %></li>
      <li><%= recipe.difficulty %></li>
      <li><%= recipe.cook_time_min %></li>
    </ul>
  </div>
<% end %>

<p><%= link_to 'Enviar uma receita', new_recipe_path %></p>
<p><%= link_to 'Cadastrar um tipo de receita', new_recipe_type_path %></p>
<p><%= link_to 'Cadastrar cozinha', new_cuisine_path %></p>
<p><%= link_to 'Cadastrar lista', new_list_path %></p>
<p><%= link_to 'Pesquisar receita', search_recipes_path %></p>
