<% @recipes.each do |recipe| %>
  <div class='row'>
    <div class='col-3'>
      <%= image_tag recipe.image, class: 'small-recipe-img' if recipe.image.attached? %>
    </div>
    <div class='col-3'>
      <p><%= link_to recipe.title, recipe, class: 'link' %></p>
      <p><%= "#{(t 'type')}: #{recipe.recipe_type.name}" %></p>
      <p><%= "#{(t 'cuisine')}: #{recipe.cuisine.name}" %></p>
      <p><%= "#{(t 'difficulty')}: #{recipe.difficulty}" %></p>
    </div>
  </div>
<% end %>