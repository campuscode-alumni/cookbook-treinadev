<% if @recipe.errors.any? %>
  <%= flash[:failure] %>
<% end %>

<%= form_for @recipe do |f| %>
  <table>
    <tr>
      <td><%= f.label :title, 'TÃ­tulo' %></td>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <td><%= f.label :recipe_type_id, 'Tipo da Receita' %></td>
      <td><%= f.collection_select :recipe_type_id, @recipe_types, :id, :name %></td>
    </tr>
    <tr>
      <td><%= f.label :cuisine_id, 'Cozinha' %></td>
      <td><%= f.collection_select :cuisine_id, @cuisines, :id, :name %></td>
    </tr>
    <tr>
      <td><%= f.label :difficulty, 'Dificuldade' %></td>
      <td><%= f.text_field :difficulty %></td>
    </tr>
    <tr>
      <td><%= f.label :cook_time, 'Tempo de Preparo' %></td>
      <td><%= f.number_field :cook_time %></td>
    </tr>
    <tr>
      <td><%= f.label :ingredients, 'Ingredientes' %></td>
      <td><%= f.text_area :ingredients %></td>
    </tr>
    <tr>
      <td><%= f.label :cook_method, 'Como Preparar' %></td>
      <td><%= f.text_area :cook_method %></td>
    </tr>
    <tr>
      <td><%= f.label :image, 'Imagem' %></td>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <td><%= f.submit 'Enviar' %></td>
    </tr>
  </table>
<% end %>

