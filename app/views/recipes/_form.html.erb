<% if @recipe.errors.any? %>
  <%= flash[:failure] %>
<% end %>

<%= form_for @recipe do |f| %>
  <p><%= f.label :title, 'TÃ­tulo' %></p>
  <p><%= f.text_field :title %></p>

  <p><%= f.label :list_id, 'Tipo da Receita' %></p>
  <p><%= f.collection_select :list_id, @recipe_types, :id, :name %></p>

  <p><%= f.label :cuisine_id, 'Cozinha' %></p>
